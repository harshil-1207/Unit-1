#include <stdio.h>
int main() {
int i, n, value, sum = 0;
float mean;
printf("Enter the number of values: ");
scanf("%d", &n);
for(i = 1; i <= n; i++) {
printf("Enter value %d: ", i);
scanf("%d", &value);
sum += value;
}
mean = sum / (float)n;
printf("Sum = %d\n", sum);
printf("Mean = %.2f\n", mean);
return 0;
}
